  return [
    'admin/configure/etgenderpaygap' => [
      'page callback' => 'etgenderpaygap__page_load_data',
      'access callback' => TRUE, // xxx
    ],

    'etgenderpaygap/matches' => [
      'page callback'   => 'etgenderpaygap__page_matches',
      'access callback' => TRUE, //etgenderpaygap__access_matches
    ],

    'etgenderpaygap/submit' => [
      'page callback'   => 'etgenderpaygap__page_submit',
